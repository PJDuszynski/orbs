<UserControl x:Class="SWTORCombatParser.Views.Phases.PhaseBar"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWTORCombatParser.Views.Phases"
                xmlns:vm="clr-namespace:SWTORCombatParser.ViewModels.Phases"
                x:DataType="vm:PhaseBarViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid Margin="20,0,10,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="Phases" FontWeight="DemiBold" FontSize="20" Foreground="WhiteSmoke" FontFamily="{StaticResource MainFont}" VerticalAlignment="Center"></TextBlock>
        <Border x:Name="PartitionBorder" Margin="5,0,5,2" Grid.Column="1" BorderThickness="2" BorderBrush="{StaticResource GreenColorBrush}" CornerRadius="5" Padding="0,1,0,1">
            <Grid x:Name="PartitionsHolder" HorizontalAlignment="Stretch">
                
            </Grid>
        </Border>
    </Grid>
</UserControl>
