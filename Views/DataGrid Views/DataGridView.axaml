<UserControl x:Class="SWTORCombatParser.Views.DataGrid_Views.DataGridView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SWTORCombatParser.Views.DataGrid_Views"
                xmlns:vm="clr-namespace:SWTORCombatParser.ViewModels.DataGrid"
                x:DataType="vm:DataGridViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel ToolTip.Tip = "Configure up to 8 metrics.&#x0a;Right click on metric name in header to remove" VerticalAlignment="Center" HorizontalAlignment="Right" IsVisible="{Binding CanAddColumns}"  Margin="0,0,15,0" Orientation="Horizontal">
            <TextBlock HorizontalAlignment="Center" FontSize="11" Margin="0,2,5,2" VerticalAlignment="Center" Text="Add Column"></TextBlock>
            <ComboBox MaxWidth="60" FontSize="11" ItemsSource="{Binding AvailableColumns}" SelectedItem="{Binding SelectedNewColumn}"></ComboBox>
        </StackPanel>
        <DataGrid Grid.Row="1" Sorting="DynamicDataGrid_OnSorting" VerticalScrollBarVisibility="Auto" x:Name="DynamicDataGrid" IsReadOnly="True" ItemsSource="{Binding PartyMembers}" Margin="0,0,2,0" >
            <DataGrid.Styles>
                <Style Selector="DataGridRow:nth-child(odd)">
                    <Setter Property="Background" Value="Transparent" />
                </Style>
                <Style Selector="DataGridRow:nth-child(even)">
                    <Setter Property="Background" Value="{StaticResource Gray1}" />
                </Style>
                <Style Selector="DataGridCell.rightAlign">
                    <Setter Property="HorizontalContentAlignment" Value="Right"></Setter>
                </Style>
                <Style Selector="DataGridCell.static">
                    <Setter Property="IsHitTestVisible" Value="False"></Setter>
                </Style>
                <Style Selector="DataGridColumnHeader">
                    <Setter Property="FontSize" Value="10"></Setter>
                </Style>
            </DataGrid.Styles>
        </DataGrid>

    </Grid>
</UserControl>
