<UserControl x:Class="SWTORCombatParser.Views.Overlay.Room.RoomOverlay"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWTORCombatParser.Views.Overlay"
        xmlns:vm="clr-namespace:SWTORCombatParser.ViewModels.Overlays.Room"
        x:DataType="vm:RoomOverlayViewModel"
        mc:Ignorable="d"
        Background="{x:Null}">
    <Grid x:Name="MainArea"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          IsVisible="{Binding IsActive, Converter={StaticResource BooleanToHiddenVisibilityConverter}}"
          ToolTip.Tip="Room Overlay">
        <Canvas x:Name="ImageCanvas"
                IsHitTestVisible="False"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
            <Image x:Name="RoomImage"
                   Source="{Binding ImagePath}"
                   Stretch="Fill"
                   Width="{Binding Bounds.Width, Mode=OneWay, RelativeSource={RelativeSource AncestorType=Canvas}}"
                   Height="{Binding Bounds.Height, Mode=OneWay, RelativeSource={RelativeSource AncestorType=Canvas}}"
                   Canvas.Left="0"
                   Canvas.Top="0"/>
            <Image x:Name="CharImage"
                   Source="{Binding CharImagePath}"/>
        </Canvas>
    </Grid>
</UserControl>
