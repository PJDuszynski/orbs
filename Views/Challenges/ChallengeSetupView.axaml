<Window x:Class="SWTORCombatParser.Views.Challenges.ChallengeSetupView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SWTORCombatParser.Views.Challenges"
             xmlns:vm="clr-namespace:SWTORCombatParser.ViewModels.Challenges"
             x:DataType="vm:ChallengeSetupViewModel"
             Title="Challenge Setup"
             mc:Ignorable="d"
             Width="600" Height="600"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
        </Grid>

        <ContentPresenter Grid.ColumnSpan="2" Content="{Binding EncounterSelectionView}" Grid.Row="0" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="5,5,0,5"></ContentPresenter>

        <Border Grid.ColumnSpan="2" BorderBrush="DimGray" BorderThickness="3,0,3,3" Margin="3,0,3,0" CornerRadius="0,0,5,5" Grid.Row="1" Background="Transparent">
                <DataGrid ItemsSource="{Binding ChallengeRows}" IsReadOnly="True">
                                        <DataGrid.Columns>
                        <DataGridTextColumn Width="*" Header="Name" FontSize="{StaticResource NormalFontSize}" Binding="{Binding Name}"></DataGridTextColumn>
                        <DataGridTextColumn Width="*" Header="Type" FontSize="{StaticResource NormalFontSize}" Binding="{Binding Type}"></DataGridTextColumn>
                        <DataGridTemplateColumn Width=".75*" Header="Color">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="5" Margin="2,1" Background="{Binding ChallengeBackground}" HorizontalAlignment="Stretch" Height="20"></Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width=".75*" Header="Active">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox HorizontalAlignment="Center" IsChecked="{Binding IsEnabled}"></CheckBox>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width=".75*" Header="Edit">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button  HorizontalAlignment="Center" Command="{Binding EditCommand}">
                                        <Image Height="15" Source="avares://Orbs/resources/editIcon.png"></Image>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width=".75*" Header="Share">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button HorizontalAlignment="Center" Command="{Binding ShareCommand}">
                                        <Image Height="15" Source="avares://Orbs/resources/shareIcon.png"></Image>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width=".75*" Header="Delete">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button HorizontalAlignment="Center" Classes="RoundedCorner" Content="x" Background="{StaticResource RedColorBrush}" Foreground="Beige" Width="30" Command="{Binding DeleteCommand}">
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
        </Border>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Viewbox Grid.Row="3" Grid.Column="0" MaxHeight="50" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal"   >
                    <StackPanel VerticalAlignment="Center" Grid.Column="0" HorizontalAlignment="Center" Orientation="Vertical">
                        <TextBlock  Foreground="WhiteSmoke" VerticalAlignment="Center" Margin="15,0,15,0" FontFamily="{StaticResource MainFont}" FontSize="{StaticResource LargeFontSize}" Text="Import Challenge"></TextBlock>
                        <TextBox Text="{Binding ImportId}" Classes="RoundedTextBox" FontSize="{StaticResource LargeFontSize}" Width="100"/>
                    </StackPanel>
                    <Button Background="Gray" Foreground="WhiteSmoke" Command="{Binding ImportCommand}" FontSize="{StaticResource LargeFontSize}" Classes="RoundedCorner" Width="75" Content="Import" Height="30" Margin="0,20,0,0"></Button>
                </StackPanel>
            </Viewbox>
            <Button Grid.Column="1" HorizontalAlignment="Center" Background="Gray" Foreground="WhiteSmoke" Classes="RoundedCorner" Height="45" Padding="8,5,8,5" FontFamily="{StaticResource MainFont}" VerticalContentAlignment="Center" FontSize="{StaticResource LargeFontSize}" Content="Add Challenge" Command="{Binding AllChallengeCommand}"></Button>
        </Grid>
    </Grid>
</Window>
